{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Remote Debug WorkerModule",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": [
                    "-H ssh://pi@192.168.12.90",
                    "exec",
                    "-i",
                    "WorkerModule",
                    "sh",
                    "-c"
                ],
                "debuggerPath": "~/vsdbg/vsdbg",
                "pipeCwd": "${workspaceFolder}",
                "quoteArgs": true
            },
            "sourceFileMap": {
                "/app": "${workspaceFolder}/modules/WorkerModule/src"
            },
            "justMyCode": true
        },
        {
            "name": "Remote Debug ButtonModule",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": [
                    "-H ssh://pi@192.168.137.195",
                    "exec",
                    "-i",
                    "ButtonModule",
                    "sh",
                    "-c"
                ],
                "debuggerPath": "~/vsdbg/vsdbg",
                "pipeCwd": "${workspaceFolder}",
                "quoteArgs": true
            },
            "sourceFileMap": {
                "/app": "${workspaceFolder}/modules/src/ButtonModule"
            },
            "justMyCode": true
        },
        {
            "name": "Launch IoT WorkerModule",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/bin/Debug/netcoreapp3.1/WorkerModule.dll",
            "args": [],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "stopAtEntry": false,
            "console": "internalConsole",
            "env": {
                "EdgeHubConnectionString": "${config:azure-iot-edge.EdgeHubConnectionString}",
                "EdgeModuleCACertificateFile": "${config:azure-iot-edge.EdgeModuleCACertificateFile}"
            }
        },
        {
            "name": "Launch IoT ButtonModule",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/bin/Debug/netcoreapp3.1/ButtonModule.dll",
            "args": [],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "stopAtEntry": false,
            "console": "internalConsole",
            "env": {
                "EdgeHubConnectionString": "${config:azure-iot-edge.EdgeHubConnectionString}",
                "EdgeModuleCACertificateFile": "${config:azure-iot-edge.EdgeModuleCACertificateFile}"
            }
        }
    ]
}
